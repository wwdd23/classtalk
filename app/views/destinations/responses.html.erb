<div id="groups">
    <div id="group_list">
	    <%= render :partial => 'groups/group_list' %>
    </div>
    <div id="group_list_bottom">
        <div class="field_description margin large"><%= @groups.count %> groups</div>
        <%= link_to "Add New Group", new_group_path, :class => 'button' %>
    </div>
</div>
<div id="group_content">
	<div id="group_header">
		<ul id="group_nav">
			<li>
				<a href="<%= group_path(@group) %>"><div id="message_nav" class="group_nav_item"></div></a>
				<div class="group_nav_text">
					<div id="messages">
						<div class="arrow_up_small"></div>
						<span class="group_nav_text_element contexual_popup">Messages</span>
					</div>
				</div>
			</li>
			<li>
				<%= link_to group_destinations_path(@group) do %>
					<div id="checkins_nav" class="group_nav_item active"></div>
				<% end %>
				<div class="group_nav_text">
					<div id="checkins">
						<div class="arrow_up_small"></div>
						<span class="group_nav_text_element contexual_popup">Check Ins</span>
					</div>
				</div>
			</li>
			<li>
				<a href="<%= group_path(@group) %>"><div id="members_nav" class="group_nav_item"></div></a>
				<div class="group_nav_text">
					<div id="members">
						<div class="arrow_up_small"></div>
						<span class="group_nav_text_element contexual_popup">Members</span>
					</div>
				</div>
			</li>
			<li>
				<%= link_to edit_group_path(@group) do %>
					<div id="settings_nav" class="group_nav_item"></div>
				<% end %>
				<div class="group_nav_text">
					<div id="settings">
						<div class="arrow_up_small"></div>
						<span class="group_nav_text_element contexual_popup">Settings</span>
					</div>
				</div>
			</li>
		</ul>
		<div id="group_number">
	        <h3 class="right josefin">
	            <%= PhoneValidator::OUTPUT_PRINTF%@group.phone_number.scan(/\d/) %>
	        </h3>
	    </div>
	</div>
	<div>
		<div id="page_actions">
			<%= link_to 'Â« Back', group_destination_path(@group,@destination), :class => "button minor left" %>
			<a class="button minor right margin_left" onClick="$('.responses_student').show();">Expand All</a>
			<%= link_to "Download All", responses_group_destination_path(@group, @destination, :format => "csv"), :class => "button minor right" %>
		</div>
		<% @responses_by_student.each do |student,responses| %>
			<a class="formwrap list" onClick="$('#responses_student_<%= student.id.to_s %>').show();">
				<span class="destination name josefin grabber"><%= student.name %></span>
				<span class="destination answers_number"><%= pluralize(responses.count, "response") %></span>
				<ol id="responses_student_<%= student.id.to_s %>" class="responses_student">
					<% responses.each do |response| %>
						<li class="destination answers question">
							<%= response.question.content %>
						</li>
						<span class="destination answers"><%= response.content %></span>
						<span class="destination answers time"><%= formatted_time(response.question.created_at) %></span>
			        <% end %>
				</ol>
			</a>
		<% end %>
</div>