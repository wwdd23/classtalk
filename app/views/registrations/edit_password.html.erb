<div id="signup_form_wrap">
    <h2 class="oswald grabber">Change Password</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
	  <div class="field">
        <%= f.label :current_password, "Verify Current Password" %>
        <%= f.password_field :current_password %></p>
      </div>
      <div class="field">
        <%= f.label :password, "New Password" %>
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, "Confirm New Password" %>
        <%= f.password_field :password_confirmation %>
      </div>
    </fieldset>
	<br>
    <%= link_to "Cancel", :back, :class => "button secondary left" %>
	<%= f.submit "Save", :class => "button primary right" %>
</div>
<% end %>