<%= form_for student, :html => {:method => :put, :id => 'edit_student_'+student.id.to_s, :style =>'display: none;', :class => "formwrap list edit"}, :remote => true do |f| %>
    <%= f.hidden_field :group_id, :value => group.id %>
      <%= f.text_field :name, :class => "ajax_edit student", :title => "Name" %>
      <%= f.text_field :phone_number, :class => "ajax_edit number infield_form_label", :title => "Mobile Number" %>
      <%= f.text_field :email, :class=>"ajax_edit number infield_form_label", :title => "Email" %>
      <br>
      <%= f.submit 'Save', :class=>"button minor"%>
      <a href="#" id="edit_student_cancel" data="<%= student.id%>" class="button minor secondary">Cancel</a>
<%end%>