<div id="left_column">
  <%= render :partial => 'send_message' %>
</div>

<div id="right_column">
  <%= form_for(@group,:url=>:update_memberships_of_group) do |f| %>
    <% @students.each_with_index do |student, index| %>
      <% student.id = nil %>
      <%= fields_for("students[]",student) do |sf| %>
        <% if student.errors.any? %>
          <div id="error_explanation">
            <h2>Uh oh! Fix these <%= pluralize(student.errors.count, "problem") %>, then try again.</h2>
              <ul>
                <% student.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
          </div>
        <%end%>
      <div class="gray_outline">
        <div class="field">
          <%= sf.label :name %><br />
          <%= sf.text_field :name, :class => "membership_field last" %>
        </div>
        <div class="field">
          <%= sf.label :phone_number %><br />
          <%= sf.text_field :phone_number, :class => "membership_field" %>
        </div>
    </div>
      <%end%>
    <%end%>

    <div class="actions">
      <%= f.submit "Save Changes", :class => "button secondary right", :disable_with => "Wait..." %>
    </div>
  <%end%>
</div>
