<h1 class="oswald grabber">
	Sign in
</h1>
<div id="signin_form_wrap">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <p><%= f.label :email%>
      <%= f.email_field :email, :class => "signin", :title => "Email" %></p>

      <p><%= f.label :password %>
      <%= f.password_field :password, :class => "signin last", :title => "Password" %></p>

      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :class => "" %><%= f.label :remember_me, :class => "inline"%>
      <% end -%>
        <p><%= f.submit "Sign In", :class => "button" %></p>

    <% end %>
    <div id="signin_more_actions">
        <%= render :partial => "devise/shared/links" %>
    </div>
</div>
